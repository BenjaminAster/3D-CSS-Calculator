
link(rel="stylesheet" href="./style.css")

- const checkboxCount = 16;
- const cubeSides = ["front", "back", "left", "right", "top", "bottom"];

section.addition
	for row in ["first", "second"]
		for val, i in Array(checkboxCount)
			input(type="checkbox" id=`check-${row}-${checkboxCount - 1 - i}`)

	for row, rowIdx in ["first", "second"]
		.labels(class=`${row}-labels`)
			span.wrapper: span.placeholder.cube
				for cubeSide in cubeSides
					div.side(class=cubeSide)
			for val, i in Array(checkboxCount)
				span.wrapper: label.cube(for=`check-${row}-${checkboxCount - 1 - i}`)
					for cubeSide in cubeSides
						div.side(class=cubeSide)

		span.number-display(class=row)

		.operator #{rowIdx ? "=" : "+"}

	span.result-display
		for val, i in Array(checkboxCount + 1)
			span.wrapper: span.show-check.cube(class=`check-${checkboxCount - i}`)
				for cubeSide in cubeSides
					div.side(class=cubeSide)
	
	span.number-display.sum



