
link(rel="stylesheet" href="./style.css")

- const checkboxCount = 16;

section.addition
	for row in ["first", "second"]
		for val, i in Array(checkboxCount)
			input(type="checkbox" id=`check-${row}-${checkboxCount - 1 - i}`)

	for row, rowIdx in ["first", "second"]
		.labels(class=`${row}-labels`)
			span.placeholder &nbsp;
			for val, i in Array(checkboxCount)
				span: label(for=`check-${row}-${checkboxCount - 1 - i}`)
					.front
					.back
					.left
					.right
					.top
					.bottom

		span.number-display(class=row)

		.operator #{rowIdx ? "=" : "+"}

	span.result-display: .bits
		for val, i in Array(checkboxCount + 1)
			span.show-check(class=`check-${checkboxCount - i}`)
				span.digit-0 0
				span.digit-1 1
	
	span.number-display.sum


